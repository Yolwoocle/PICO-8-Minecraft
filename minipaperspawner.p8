--particles

function make_ptc(pos,spd,s,c,c2)
	return {
		x=pos[1],
		y=pos[2],
		dx=spd[1],
		dy=spd[2],
		sx=s[1],
		sy=s[2],
		sz=s[3],
		ds=0.9,
		g=0,
		col=c,
		scol=c2,
		
		life=0,
		maxlife=rnd(30)+30,
	}
end

function update_ptc(p)
	p.dx *= 0.9
	p.dy *= 0.9
	p.x += p.dx
	p.y += p.dy
	p.sx *= p.ds
	p.sy *= p.ds
	p.sz *= p.ds
	
	p.life += 1 
end

function draw_ptc(p)
	rectfill(p.x, p.y,
	p.x+p.sx, p.y+p.sy, p.col)
	rectfill(p.x+p.sx, p.y,
	p.x+p.sx+p.sz, p.y+p.sy, p.scol)
end
