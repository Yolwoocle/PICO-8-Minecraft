gndh = 120

spwnr_mob = {
	spr=16,
	dy=0,
	x=64,
	y=106,
	g=0.2,
	bounce=1.8,
	flipx=false,
}

function spwnr_mob.update(s)
	s.dy += s.g
	s.y += s.dy
	if s.y+8>gndh then
		s.y=gndh-8
		s.dy=-s.bounce
		s.flipx=not s.flipx
	end
end

function spwnr_mob.draw(s)
	spr(s.spr,s.x,s.y,1,1, s.flipx)	
end
	
